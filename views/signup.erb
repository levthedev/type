<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script async type="text/javascript" src="./js/stripe.js"></script>

<div class='card-wrapper'>
  <form action="/charge" method="POST" id="payment-form">
    <span class="payment-errors"></span>

    <div class="form-row">
      <label>
        <span>Card Number</span>
        <input type="text" size="20" data-stripe="number" id="number">
      </label>
    </div>

    <div class="form-row">
      <label>
        <span>Expiration (MM/YY)</span>
        <input type="text" size="2" data-stripe="exp_month" id="exp_month">
      </label>
      <span> / </span>
      <input type="text" size="2" data-stripe="exp_year" id="exp_year">
    </div>

    <div class="form-row">
      <label>
        <span>CVC</span>
        <input type="text" size="4" data-stripe="cvc" id="cvc">
      </label>
    </div>

    <div class="form-row">
      <label>
        <span>Amount</span>
        <input type="text" name="amount" size="4">
      </label>
    </div>

    <input type="submit" class="submit" value="Submit Payment">
  </form>
</div>
<script src="./js/card.js"></script>
<script src="./js/create_card.js"></script>
