<div id='dashboard-wrapper'>
  <h1 id='header'> Categories </h1>
  <hr id="underline"/>
  <div id='lessons'>
    <% categories.map do |category| %>
      <a href='/category/<%= category[0] %>'>
        <div class='lesson'>
          <%= category[0].split('_').map(&:capitalize).join(' ').gsub(' Ii', ' II') %>
          <div class="difficulty">Difficulty: <%= category[1] %></div>
        </div>
      </a>
    <% end %>
  </div>
</div>
<style>@import url('./stylesheets/dashboard.css');</style>
<script src="/js/categories.js"></script>
